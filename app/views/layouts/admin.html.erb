<!DOCTYPE html>
<html>
  <head>
    <title> Mourinto App: <%= @page_title || 'Admin Area' %></title>
    <%= stylesheet_link_tag('admin', media: 'all') %>
  </head>
  <body>
  <div id="header">
    <h1>Mourinto App Admin</h1>
  </div>
  <div id="main">
    <% if !flash[:notice].blank? %>
        <div class="notice">
          <%= flash[:notice] %>
        </div>
    <% end %>

    <div id="content">
      <%= yield %>
    </div>
  </div>
  <div id="footer">
    <p id="copyright">&copy; Mourinto</p>
  </div>
  </body>
</html>
