<!DOCTYPE html>
<html>
<head>
  <title>Mourinto App<%= " | #{@page_title}" if @page_title %></title>
  <%= stylesheet_link_tag('application', media: 'all') %>
</head>
<body>

<div id="header">
  <h1>Mourinto App</h1>
</div>

<div id="main">

  <div id="navigation">
    <%= render(partial: 'layouts/navigation', locals: { subjects: @subjects} ) %>
  </div>

  <div id="content">
    <%= yield %>
  </div>
  <div class="clear"></div>

</div>

<div id="footer">
  <p id="copyright">&copy; Mourinto</p>
</div>

</body>
</html>
